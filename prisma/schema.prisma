generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  //url = env("DATABASE_URL") THIS IS OLD WAY OF DOING THINGS? Commenting this out seems to work
}

model User {
  id             String          @id @default(uuid())
  name           String
  email          String          @unique
  password       String
  createdAt      DateTime        @default(now())
  watchlistItems WatchlistItem[]

  movies Movie[] @relation("MovieCreator")
}

model Movie {
  id             String          @id @default(uuid())
  title          String
  overview       String?
  releaseYear    Int
  generes        String[]        @default([])
  runtime        Int?
  posterUrl      String?
  createdBy      String
  createdAt      DateTime        @default(now())
  watchlistItems WatchlistItem[]

  creator User @relation("MovieCreator", fields: [createdBy], references: [id],onDelete: Cascade)
}

model WatchlistItem {
  id        String          @id @default(uuid())
  userId    String
  movieId   String
  status    WatchlistStatus @default(PLANNED)
  rating    Int?
  notes     String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)
}

enum WatchlistStatus {
  PLANNED
  WATCHING
  COMPLETED
  DROPPED
}
